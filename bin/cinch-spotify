require 'rubygems'
require File.expand_path('../../lib/cinch-spotify', __FILE__)

bot = Cinch::Bot.new do
  configure do |c|
    c.nick = "Spotibot"
    c.server = "irc.freenode.org"
    c.channels = ["#cinchbots"]
    c.plugins.plugins = [Cinch::Plugins::Netfeed::Spotify]
  end
end

bot.start
